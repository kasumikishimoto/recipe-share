<%= form_with model: @recipe, local: true do |f| %>

<div class="field_type">

<div class="field">
  <div class="field_image">

    <%= f.label :images, "料理の画像", class:'recipe_text' %><br />
    <%= f.file_field :images, name: 'recipe[images][]', id:"cook_image" %>
      <div id="image-list"></div>

    <% @recipe.images.each do |image| %>
      <%= image_tag image, class:'images' %>
    <% end %>

  </div>
</div>


<div class="active-hash">
  <div class="field">
    <div class="field_time_require">
      <div class="recipe_text">
        所要時間<br/>
      </div>
      <%= f.collection_select(:time_require_id, TimeRequire.all, :id, :name, {}, {class:"collection-select"}) %>
    </div>
  </div>

  <div class="field">
    <div class="field_category">
      <div class="recipe_text">
        カテゴリー<br/>
      </div>
      <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"collection-select"}) %>
    </div>
  </div>
</div>

<div class="field">
  <div class="tag-field", id='tag-field'>
    <%= f.label :name, "タグ""(複数入力の際はカンマで区切って入力ください)", class:"tag-name" %><br />
    <%= f.text_field :name,  placeholder: "#時短レシピ, #サラダ", class:"input-tag" %>
  </div>
    <div id="search-result">
    </div>
</div>

<div class="field">
  <div class="field_title">
    <%= f.label :title, "料理名", class:"recipe-title" %><br />
    <%= f.text_field :title, id:"cook_title", class:"title_field" %>
  </div>
</div>

<div class="field">
  <div class="field_material">
    <%= f.label :material, "材料", class:"recipe-materials" %><br />
    <%= f.text_area :material, id:"cook_material", placeholder:"鶏肉◯g・醤油 大さじ１・ニンニク一欠片 等", class:"material_field" %>
  </div>
</div>

<div class="field">
  <div class="field_text">
    <%= f.label :text, "調理方法", class:"way_to_cook" %><br />
    <%= f.text_area :text, id:"cook_text", placeholder:"調味料は全て合わせておく...", class:"text_field" %>
  </div>
</div>

  <div class="actions">
    <%= f.submit "シェアする", class: :form__btn %>
    <% end %>
  </div>
</div>