<div class="main-container">
  <h1>うちで食べよう</h1>


    <div class='search-bar-contents'>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%#img src="/assets/検索アイコン1.jpg", class:"search-icon"%>
      </button>
    </form>
  </div>


<%# レシピ一覧の表示 %>
<div class="recipe__content">
  <div class="subtitle">
  新着レシピ
  </div>
  <div class="recipe-contents">
    <% @recipes.each do |recipe| %>
    <%= link_to recipe_path(recipe.id) do %>
      <div class="list">
        <div class="recipe-image-content">
          <%= image_tag recipe.image, class: "recipe-images" %>
        </div>

        <div class="over-view">
          <h3 class="recipe-title">
            <%= recipe.title %>
          </h3>
          <h3 class="recipe-category">
            <%= recipe.category.name %>
          </h3>
          <h3 class="time_require">
            <%= recipe.time_require.name %>
          </h3>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
</div>
</div>